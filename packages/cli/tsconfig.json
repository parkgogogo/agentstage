{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "agent-stage-bridge": ["./node_modules/agent-stage-bridge/dist/gateway/index.d.ts"],
      "agent-stage-bridge/sdk": ["./node_modules/agent-stage-bridge/dist/sdk/index.d.ts"],
      "agent-stage-bridge/browser": ["./node_modules/agent-stage-bridge/dist/browser/index.d.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
